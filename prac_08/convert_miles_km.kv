BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
            multiline: False
            on_text: app.update_result()

        Button:
            text: 'Up'
            on_press: app.handle_increment(1)

        Button:
            text: 'Down'
            on_press: app.handle_increment(-1)

    Button:
        text: 'Convert'
        on_press: app.handle_convert()

    Label:
        text: app.result
        color: (1, 1, 0, 1)